#include <iostream>
#include<cmath>
using namespace std;

int main()
{
	double a=3.5, x=-0.7, y=0, t=0;

	
	if (a <= x) {
		y = a + log(x + a);
	}
	else y = sqrt(sin(a*x));
	if (a>y) {
		t = y/a-x;
	}
	else if (a==y) {
		t = y/(a-x)+a+x/y*y;
	}
	else t = tan(a*x) + cos(2 * a*y);
	cout << a << endl;
	cout << x << endl;
	cout << y << endl;
	cout << t << endl;
	system("pause");
    return 0;
}
