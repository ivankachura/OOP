#include <iostream>
#include <string>
#include <queue>
using namespace std;

class Client 
{
	string name;
	string car;
    public:
	Client(string& name, string& car) : name(name), car(car) {};
	void getData()
	{
	    cout << "- - - - - - - - - - - - - - - -" << endl;
		cout << endl << "Имя: " << name << endl;
		cout << "Авто: " << car << endl;
	}	
};

int main() 
{
	queue<Client> q;	
	for (int i = 0; i < 3; i++) 
	{
		string name, car;
		cout << "- - - - - - - - - - - - - - - -" << endl;
		cout << "Клиент " << i + 1 << endl;
		cout << "- -" << endl;
		cout << "Введите имя: ";
		cout << "- -" << endl;
		cin >> name;
		cout << "Введите модель автомобиля: ";
		cin >> car;
		q.push(Client(name, car));	
	}
	cout << "- - - - - - - - - - - - - - - -" << endl;
	cout << "Queue" << endl;
	for (int i = 1; !q.empty(); i++) 
	{
		cout << i;
		q.front().getData();	
		q.pop();	
	}
	system("pause");
	return 0;
}
