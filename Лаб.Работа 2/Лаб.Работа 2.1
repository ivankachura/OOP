#include <iostream>
using namespace std;
double summa(double a, double b) {
	return a + b;
}

double proizv(double a, double b) {
	return a * b;
}

double raznost(double a, double b) {
	return a - b;
}
double(*p)(double a, double b);
int main()
{
	double a, b;
	cout << "- - - - - - - - - - -" << endl;
	cout << "Введите А:" << endl;
