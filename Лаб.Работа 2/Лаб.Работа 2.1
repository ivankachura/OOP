	cout << "Введите B:" << endl;
	cin >> b;
	int z;
	
	cout << "- - - - - - - - - - - - - - - -" << endl;
	cout << "1-РАЗНОСТЬ 2-СУММА 3-ПРОИЗВ.:" << endl;
	cin >> z;
	switch (z)
	{
	case 1: p = raznost;
		break;
	case 2: p = summa;
		break;
	case 3: p = proizv;
		break;
	default:
		break;
	}
    cout << "- - - - - - - - - - - - - - - -" << endl;
	cout<<p(a, b)<<endl;
	system("pause");
    return 0;
}
